{
    "name": "vscode-kantan",
    "publisher": "Funkschy",
    "displayName": "vscode-kantan",
    "description": "Support for the Kantan programming language",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.45.0"
    },
    "categories": [
        "Programming Languages",
        "Debuggers"
    ],
    "contributes": {
        "breakpoints": [
            {
                "language": "kantan"
            }
        ],
        "debuggers": [
            {
                "type": "lldb-mi",
                "program": "./out/src/lldb.js",
                "runtime": "node",
                "label": "LLDB",
                "configurationAttributes": {
                    "launch": {
                        "requires": [
                            "program"
                        ],
                        "properties": {
                            "target": {
                                "type": "string",
                                "description": "Path to the Executable"
                            },
                            "cwd": {
                                "type": "string",
                                "description": "Current working directory",
                                "default": "${workspaceFolder}/"
                            }
                        }
                    }
                }
            }
        ],
        "languages": [
            {
                "id": "kantan",
                "aliases": [
                    "Kantan",
                    "kantan"
                ],
                "extensions": [
                    ".kan"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "kantan",
                "scopeName": "source.kan",
                "path": "./syntaxes/kantan.tmLanguage.json"
            }
        ]
    },
    "activationEvents": [
        "onDebug", "onDebugDynamicConfigurations:lldb-mi"
    ],
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js"
    },
    "dependencies": {
        "vscode-debugadapter": "1.41.0",
        "vscode-debugprotocol": "1.41.0"
    },
    "devDependencies": {
        "@types/vscode": "^1.45.0",
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.11.0",
        "eslint": "^6.8.0",
        "@typescript-eslint/parser": "^2.30.0",
        "@typescript-eslint/eslint-plugin": "^2.30.0",
        "glob": "^7.1.6",
        "mocha": "^7.1.2",
        "typescript": "^3.8.3",
        "vscode-test": "^1.3.0"
    }
}
